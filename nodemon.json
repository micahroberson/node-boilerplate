{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/*",
    "package.json",
    "webpack.config.js",
    "client/*",
    "test/*",
    "build/*",
    "migrations/*"
  ],
  "verbose": true,
  "env": {
    "NODE_ENV": "development",
    "BABEL_ENV": "server"
  },
  "ext": "js",
  "execMap": {
    "js": "node -r dotenv/config -r babel-register"
  }
}